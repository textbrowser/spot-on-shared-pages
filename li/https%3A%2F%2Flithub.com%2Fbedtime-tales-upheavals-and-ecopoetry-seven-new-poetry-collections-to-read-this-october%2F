    <div class="inner">
    	<li id="custom_ads-25" class="widget Custom_Ads"><div class="htlad-LH_PP_LB"></div></li>
    	<!-- Begin main content -->
    	<div class="inner_wrapper">
    		    		<div class="sidebar_content" itemscope itemtype="http://schema.org/Article">
    			<meta itemprop="mainEntityOfPage" content="https://lithub.com/bedtime-tales-upheavals-and-ecopoetry-seven-new-poetry-collections-to-read-this-october/"/>
    			<span itemprop="publisher" itemscope itemtype="http://schema.org/Organization">
    				<meta itemprop="name" content="Lithub" />
