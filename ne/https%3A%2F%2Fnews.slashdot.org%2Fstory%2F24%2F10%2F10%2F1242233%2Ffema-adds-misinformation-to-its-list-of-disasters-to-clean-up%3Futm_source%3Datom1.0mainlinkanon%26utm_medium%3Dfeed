		<div id='div-gpt-ad-1x1'><script type='text/javascript'>
googletag.cmd.push(function(){
googletag.pubads().enableLazyLoad({fetchMarginPercent: 0,renderMarginPercent: 0});
googletag.display('div-gpt-ad-1x1');});</script></div>
	

	</body>
