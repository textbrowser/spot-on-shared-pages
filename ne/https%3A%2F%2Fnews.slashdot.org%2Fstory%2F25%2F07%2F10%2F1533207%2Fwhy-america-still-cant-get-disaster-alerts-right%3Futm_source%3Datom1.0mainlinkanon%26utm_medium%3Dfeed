                    var regulation = bizx.cmp.getRegulation();
                    var data = {id5id: ids.id5id.uid, jurisdiction: regulation};
                    updateVid(data);
                }else{
                    updateVid({});
                }
            } catch (e) {
                updateVid({});
            }
        }, false], null);
