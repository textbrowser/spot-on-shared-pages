    function updateVid(data){
        var args = {
                method: 'PUT',
                headers: {
                   'Accept': 'application/json',
                   'Content-Type': 'application/json'
               },
            };
        if (Object.keys(data).length !== 0) {
            args.body = JSON.stringify(data);
        }
        fetch('/p/sfapi/update_vid', args);
    }
