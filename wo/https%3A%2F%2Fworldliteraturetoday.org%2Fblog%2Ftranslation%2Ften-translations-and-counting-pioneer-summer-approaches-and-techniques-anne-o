      <h3>Recommended for You</h3>
    </div>
      
      <div class="view-content">
      <div class="jcarousel-wrapper jcarousel-skin-default jcarousel-horizontal">
    <div class="jcarousel" data-jcarousel="true" data-jcarousel-swipe="true" data-jcarousel-swipe-draggable="true" data-jcarousel-swipe-method="scroll" data-jcarousel-swipe-perSwipe="3" data-events="{&quot;jcarousel:reload&quot;:&quot;jcarousel.reloadCallback&quot;}" data-wrap="circular">
