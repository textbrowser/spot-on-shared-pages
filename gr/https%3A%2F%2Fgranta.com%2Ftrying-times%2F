            jQuery(document).ready(function($) {
                
                // Check if we need to show the newsletter signup popup
                let count = parseInt(localStorage.getItem('gr_page_views') || '0', 10);
                count += 1;
                localStorage.setItem('gr_page_views', count);

                if (count >= 3 && !localStorage.getItem('popup_shown')) {
                    localStorage.setItem('popup_shown', true);
                    // Show popup modal for newsletter signup
                    jQuery('#modalNewsletterFrame').modal();
                } else {
                }
            })
        });</script>
