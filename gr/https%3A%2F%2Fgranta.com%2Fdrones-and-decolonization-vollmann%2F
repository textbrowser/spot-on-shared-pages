            <g id="00.2-Navbar-dropdown---New-Writing" transform="translate(-900.000000, -114.000000)" fill="#555555" fill-rule="nonzero">
                <g id="magnifying-glass" transform="translate(900.000000, 114.000000)">
                    <path d="M17.5958292,15.2287754 L13.2905758,10.9231087 C13.9399524,9.85780085 14.3136288,8.60449749 14.3136288,7.26574164 C14.3136288,3.37252569 10.9402879,3.08395674e-07 7.04744572,3.08395674e-07 C3.15460349,-0.00113905829 0,3.15490665 0,7.04812261 C0,10.9401992 3.37334089,14.3138639 7.26504387,14.3138639 C8.56037943,14.3138639 9.77140995,13.9617996 10.8138304,13.3522385 L15.1418689,17.6829712 C15.5656726,18.1056763 16.2526448,18.1056763 16.6753092,17.6829712 L17.7496289,16.6085484 C18.1722934,16.1858434 18.0184936,15.6514804 17.5958292,15.2287754 Z M2.16914592,7.04812261 C2.16914592,4.35238104 4.35310218,2.16821511 7.04744572,2.16821511 C9.74292852,2.16821511 12.1444829,4.56886071 12.1444829,7.26574164 C12.1444829,9.96034385 9.9593874,12.1456491 7.26504387,12.1456491 C4.56956107,12.1445098 2.16914592,9.74272481 2.16914592,7.04812261 Z" id="Shape"></path>
