<article data-history-node-id="8024" class="node node--type-package node--promoted node--view-mode-full"
  data-type="package"
  data-view-mode="full">

  <header>
    <figure>
              
            <div class="field field--name-field-media-image field--type-entity-reference field--label-hidden field__item">  <img loading="lazy" src="/content/sites/plus.maths.org/files/styles/small_square/public/2025-04/small_AdobeStock_1155936302.jpg?h=f22f7adb&amp;itok=ll71PBcy" width="200" height="200" alt="Cat" class="img-fluid image-style-small-square" />


