<article data-history-node-id="7509" data-component-id="plus2025:node_full" class="node package promoted full"
  data-is-published="yes"
  data-type="package"
  data-view-mode="full">

  <header>
              <figure>
                              <div class="field field--name-field-fp-ico field--type-image field--label-hidden field__item"><span data-component-id="plus2025:image_formatter">
      <span data-component-id="plus2025:image_style">
  <img loading="lazy" src="/content/sites/default/files/styles/small_square/public/front_icon_27.jpg?h=21cdfb7f&amp;itok=8NqLPOvx" width="200" height="200" alt="" data-component-id="plus2025:image" class="image-style-small-square" />

</span>

