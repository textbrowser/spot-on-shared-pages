<section id="content" role="main">
<!-- start article title -->
<header class='titles'><h1>Horrific Surrealism: Writing on Migration</h1></header><!-- end article title -->
<div class='article-body-wrap'>
	<!-- start article subtitles -->
	<div class='article-subtitles'>
		<section class='article-top-rail'>
			<address>By <a href="https://www.theparisreview.org/blog/author/vtnguyen/" title="Posts by Viet Thanh Nguyen" rel="author">Viet Thanh Nguyen</a></address>
			<time>March 6, 2025</time>
			<h3 class='h6'><a href="https://www.theparisreview.org/blog/lectures/" rel="category tag">Lectures</a></h3>
		</section>
