    <img
        class=""
        alt=""
        width="3000"
        height="2001"
        loading="lazy" js-autosizes        src="https://img.assets-d.propublica.org/v5/images/07302024-Flynn-Roth-018_preview_maxWidth_3000_maxHeight_3000_ppi_72_embedColorProfile_true_quality_95.jpg?crop=focalpoint&amp;fit=crop&amp;fm=webp&amp;fp-x=0.5&amp;fp-y=0.5&amp;h=534&amp;q=75&amp;w=800&amp;s=ab07323ef5fa209d0ff045c3ca83f06d"
