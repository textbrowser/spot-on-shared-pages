    <title>Caret</title>
    <path clip-rule="evenodd" d="m9.5858 8.00008-5.29289-5.2929 1.41421-1.41421 6.70708 6.70711-6.70708 6.70712-1.41421-1.4142z" fill="currentColor" fill-rule="evenodd"/>
