                                        poster="https://assets-d.propublica.org/v5/images/20250507-revlimid-video-still.jpg"
                    data-mobile-poster="https://assets-d.propublica.org/v5/images/20250507-revlimid-video-still.jpg"
                                                            >
                    <source type="video/mp4" src="https://assets-d.propublica.org/v5/video/20250507-revlimid-bank-mobile.mp4" data-mobile-src="https://assets-d.propublica.org/v5/video/20250507-revlimid-bank-mobile.mp4" data-desktop-src="https://assets-d.propublica.org/v5/video/20250507-revlimid-bank-desktop.mp4">
                </video>
            
                </div><!-- close .video-wrapper -->
            </div><!-- close .opener__art -->
            
