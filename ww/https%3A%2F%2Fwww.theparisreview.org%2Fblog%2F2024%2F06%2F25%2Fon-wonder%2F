<section id="content" role="main">
<!-- start article title -->
<header class='titles'><h1>On Wonder</h1></header><!-- end article title -->
<div class='article-body-wrap'>
	<!-- start article subtitles -->
	<div class='article-subtitles'>
		<section class='article-top-rail'>
			<address>By <a href="https://www.theparisreview.org/blog/author/sreddy/" title="Posts by Srikanth Reddy" rel="author">Srikanth Reddy</a></address>
			<time>June 25, 2024</time>
			<h3 class='h6'><a href="https://www.theparisreview.org/blog/lectures/" rel="category tag">Lectures</a></h3>
		</section>
    <!-- <p>The art and life of Mark di Suvero</p> -->
	</div>
	<!-- end article subtitles -->

