            });

            groundwaterMap.addLayer({
                id: "northam-text-text",
                type: "symbol",
                source: "northam-source",
                layout: {
                    "text-field": "North America",
                    "text-font": ["Graphik Medium"],
                    "text-transform": "uppercase",
                    "text-size": 11,
                    "text-letter-spacing": .15,
                    "text-offset": [0, 0],
                    "text-anchor": "top",
                    "text-rotate": 0,
                    "text-allow-overlap": true,
                },
                paint: {
                    "text-color": "#e2e2e2",
                    "text-opacity": .7,
                    "text-halo-color": "rgba(10,10,10,.5)",
                    "text-halo-width": 1,

                },
            });

            const arrows = [
                { className: 'arrow arrow1', coordinates: [-96, 28] },
                { className: 'arrow arrow2', coordinates: [-122.4, 37] },
                { className: 'arrow arrow3', coordinates: [-107, 23] }
            ];

            arrows.forEach(({ className, coordinates }) => {
                const arrowContainer = document.createElement('div');
                arrowContainer.classList.add('arrow-marker');

                const arrowImage = document.createElement('div');
                arrowImage.className = className;

                arrowContainer.appendChild(arrowImage);


                arrowElements.push(arrowImage);

                new mapboxgl.Marker(arrowContainer, { anchor: 'center' })
                    .setLngLat(coordinates)
                    .addTo(groundwaterMap);
            })
        }


        const fadeTextLayer = (layerId, targetOpacity, duration = 1) => {
            const currentOpacity = groundwaterMap.getPaintProperty(layerId, "text-opacity") || 0;
            const obj = { opacity: currentOpacity };

            gsap.to(obj, {
                opacity: targetOpacity,
                duration: duration,
                onUpdate: () => {
                    groundwaterMap.setPaintProperty(layerId, "text-opacity", obj.opacity);
                }
            });
        };

        const scrolly = document.querySelector(".scrolly-opener");
        const scrollySteps = scrolly.querySelectorAll(".step");

        const scroller = scrollama();

        scroller
            .setup({
                step: scrollySteps,
                offset: .8,
            })
            .onStepEnter(handleStepEnter);

        function handleStepEnter(response) {
            if (response.index == 0 && response.direction === "down") {

            }
            else if (response.index == 0 && response.direction === "up") {
                fadeTextLayer("glaciers-melting-text", 0, 1);
            }
            else if (response.index == 1 && response.direction === "down") {
                fadeTextLayer("glaciers-melting-text", 1, 1);
            }
            else if (response.index == 1 && response.direction === "up") {
                fadeTextLayer("glaciers-melting-text", 1, 1);
                fadeTextLayer("groundwater-depletion-text", 0, 1);

            }
            else if (response.index == 2 && response.direction === "down") {
                fadeTextLayer("glaciers-melting-text", 0, 1);
                fadeTextLayer("groundwater-depletion-text", 1, 1);

            }
            else if (response.index == 2 && response.direction === "up") {
                fadeTextLayer("groundwater-depletion-text", 1, 1);
                arrowElements.forEach(arrow => {
                    arrow.style.opacity = "0";
                });
            }
            else if (response.index == 3 && response.direction === "down") {
                arrowElements.forEach(arrow => {
                    arrow.style.opacity = "1";
                });
            }
            else if (response.index == 3 && response.direction === "up") {
                arrowElements.forEach(arrow => {
                    arrow.style.opacity = "1";
                });
            }
        }


        ScrollTrigger.create({
            trigger: "#final-step",
            start: "top 90%",
            end: "top 60%",
            scrub: true,
            onUpdate: (self) => {
                gsap.set("#groundwater-map", {
                    opacity: 1 - self.progress,
                    duration: 0.2,
                    ease: "none",
                });
            },

        });



    });

</script>
</div>
    

    
