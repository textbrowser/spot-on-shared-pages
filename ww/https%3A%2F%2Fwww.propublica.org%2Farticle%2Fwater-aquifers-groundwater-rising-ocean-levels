<script>
    document.addEventListener("DOMContentLoaded", function () {

        const isMobile = window.innerWidth < 749;

        mapboxgl.accessToken = "pk.eyJ1IjoicHJvcHVibGljYSIsImEiOiJjaWt6dzNnNjQxbHBudTlrc3Nqc3NidG5qIn0.ChQFj8IDuUNxSg_I6_3Pnw";

        const arrowElements = [];

        const groundwaterMap = new mapboxgl.Map({
            container: "groundwater-map",
            style: "mapbox://styles/propublica/cmbfncx4i006301sqco343icu",
            center: [45, 24],
            zoom: isMobile ? 1.5 : 2.2,
            pitch: 0,
            bearing: 0,
            antialias: true,
            interactive: false,

        });

        groundwaterMap.on('load', () => {
            groundwaterMap.addSource('0623-groundwater-source', {
                type: 'vector',
                url: 'mapbox://propublica.groundwater-0623'
            });

            groundwaterMap.setRenderWorldCopies(false);

            groundwaterMap.addLayer({
                id: '0623-groundwater-layer',
                type: 'fill',
                source: '0623-groundwater-source',
                'source-layer': '0623_merged',
                paint: {
                    'fill-color': [
                        'match',
                        ['get', 'bin'],
                        'bin_1', 'rgba(192, 71, 18,1)',
                        'bin_2', 'rgba(192, 71, 18, .9)',
                        'bin_3', 'rgba(192, 71, 18, .8)',
                        'bin_4', 'rgba(192, 71, 18, .7)',
                        'bin_5', 'rgba(192, 71, 18, .6)',
                        'bin_6', 'rgba(192, 71, 18, .5)',
                        'bin_7', 'rgba(192, 71, 18, .4)',
                        'bin_8', 'rgba(192, 71, 18, .3)',
                        'bin_9', 'rgba(27,27,27,0)',
                        '#7f7f7f'
                    ],
                    'fill-opacity': .9,
                    'fill-antialias': false
                }
            });

            setUpLabels();
            gsap.registerPlugin(ScrollTrigger);

            globeAnimation();
            globeAnimationStep2();
            ScrollTrigger.refresh();

        });

        function globeAnimation() {


            const state = { lon: 45, zoom: isMobile ? 1.5 : 2.2, lat: 24 };
            const targetLon = -115.805737;
            const targetZoom = isMobile ? 2.3 : 3;
            const targetLat = 46;

            const tl = gsap.timeline({
                paused: true,
                onUpdate: () => {
                    groundwaterMap.setCenter([state.lon, state.lat]);
                    groundwaterMap.setZoom(state.zoom);
                }
            });

            tl.to(state, {
                lon: targetLon,
                lat: targetLat,
                zoom: targetZoom,
                duration: 1,
                ease: "none"
            });

            ScrollTrigger.create({
                trigger: "#step-1",
                start: "top 50%",
                end: "bottom 50%",
                scrub: true,
                onUpdate: (self) => {
                    tl.progress(self.progress);
                },
                invalidateOnRefresh: true,
            });

            ScrollTrigger.refresh();
        }

        function globeAnimationStep2() {

            const step2State = {
                lon: -115.805737,
                lat: 46,
                zoom: isMobile ? 2.3 : 3
            };

            const targetLon = isMobile ? -105 : -112;
            const targetLat = 36;
            const targetZoom = isMobile ? 2.6 : 3.5;

            const tl = gsap.timeline({
                paused: true,
                onUpdate: () => {
                    groundwaterMap.setCenter([step2State.lon, step2State.lat]);
                    groundwaterMap.setZoom(step2State.zoom);
                }
            });

            tl.to(step2State, {
                lon: targetLon,
                lat: targetLat,
                zoom: targetZoom,
                duration: 1,
                ease: "none"
            });

            ScrollTrigger.create({
                trigger: "#step-3",
                start: "top 80%",
                end: "top 10%",
                scrub: true,
                onUpdate: (self) => {
                    tl.progress(self.progress);
                },
                invalidateOnRefresh: true,

            });

            ScrollTrigger.refresh();
        }


        function setUpLabels() {

            groundwaterMap.addSource("glaciers-melting", {
                type: "geojson",
                data: {
                    type: "FeatureCollection",
                    features: [
                        {
                            type: "Feature",
                            properties: {},
                            geometry: {
                                coordinates: [-120.559905, 57.665694],
                                type: "Point",
                            },
                        },
                    ],
                },
            });

            groundwaterMap.addLayer({
                id: "glaciers-melting-text",
                type: "symbol",
                source: "glaciers-melting",
                layout: {
                    "text-field": "Glaciers \n melting",
                    "text-font": ["Graphik Semibold"],
                    "text-size": 15,
                    "text-letter-spacing": .05,
                    "text-offset": [-4, 0],
                    "text-anchor": "top",
                    "text-rotate": 0,
                    "text-allow-overlap": true,
                },
                paint: {
                    "text-color": "#F3D9C6",
                    "text-opacity": 0,
                    "text-halo-color": "rgba(10,10,10,.5)",
                    "text-halo-width": 1,

                },
            });

            groundwaterMap.addSource("groundwater-depletion", {
                type: "geojson",
